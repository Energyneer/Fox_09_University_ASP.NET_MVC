@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Service.ViewModel.GroupViewModel

@{
    ViewData["Title"] = "Edit group " + Model.GroupName;
    Layout = "_Layout";
}

<form method="post" action="/Group/Edit">
    <div class="form-group">
        <input type="hidden" name="Id" value="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Name:</label>
        <input name="GroupName" value="@Model.GroupName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-success" />
    </div>
</form>