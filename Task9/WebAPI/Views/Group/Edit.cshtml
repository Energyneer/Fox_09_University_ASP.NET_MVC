@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Service.ViewModel.GroupsPresent

@{
    ViewData["Title"] = "Edit group " + Model.Groups.First().GroupName;
    Layout = "_Layout";
}

<form method="post" action="/Group/Edit/@Model.CourseId">
    <div class="form-group">
        <input type="hidden" name="Id" value="@Model.Groups.First().Id" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Name:</label>
        <input name="GroupName" value="@Model.Groups.First().GroupName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-success" />
    </div>
</form>

<a class="btn btn-light" asp-controller="Group" asp-action="Index" asp-route-id="@Model.CourseId">Back to Course</a>